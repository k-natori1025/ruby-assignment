<div class="topic-index-wrapper">
  <div class="container">
    
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= @topic.user.name %>
            </h2>
            <%= image_tag @topic.image.url %>
            <% if !@topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <i class="fa fa-heart topic-index-icon unliked-btn"></i>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <i class="fa fa-heart topic-index-icon liked-btn"></i>
              <% end %>
            <% end %>
            <%= @topic.favorite_users.count %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= @topic.description %>
            </p>
          </div>
        </div>
      </div>
    
    <h2>コメントする</h2>
    <%= form_with(model:[@post, @comment], method: :post) do |f| %>
        <%= f.text_area :comment_content %>
        <%= f.hidden_field :post_id, value: @post.id %>
        <%= f.submit 'コメントする' %>
    <% end %> 
    <h2>コメント一覧</h2>
    <%= @comments.each do |comment|%>
    <%= comment.comment_content %>  #コメントの内容が表示される
    <%= link_to 'ホーム', root_path %>
    
  </div>
</div>
